<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myspace="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <com.wulee.administrator.testmodule.view.CircleImageView
        android:id="@+id/circleimageview"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        myspace:civ_border_width="2dp"
        myspace:civ_border_color="@color/default_badge_color"
        myspace:civ_fill_color="@color/color_orange"/>


    <com.wulee.administrator.testmodule.view.VerticalScrollTextView
        android:id="@+id/vertical_scroll_textview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/circleimageview"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@color/default_badge_color"/>

    <com.wulee.administrator.testmodule.view.AdverItemView
        android:id="@+id/jd_adverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vertical_scroll_textview"
        android:layout_margin="10dp"
        myspace:adtextSize="30sp"
        myspace:adtextColor="#ffffff"
        myspace:gap="3000"
        myspace:animDuration="1000"
        myspace:adverHeight="40dp"
        android:background="@color/color_orange"/>

    <com.wulee.administrator.testmodule.view.ReflectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/jd_adverview"/>
</RelativeLayout>
