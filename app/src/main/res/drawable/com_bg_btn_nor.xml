<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item android:state_enabled="true" android:state_pressed="true">
		<shape>
		    <!-- 填充 -->
		    <solid android:color="@color/colorPrimary" /> <!-- 定义填充的颜色值 -->
		    <!-- 圆角 -->
		    <corners android:radius="4dp" /> <!-- 设置四个角的半径 -->  
		    <!-- 间隔 -->
		    <padding android:left="8dp" android:right="8dp" 
		        android:top="4dp" android:bottom="4dp" /> <!-- 设置各个方向的间隔 -->
		</shape>
	</item>
	
	<item android:state_enabled="false">
		<shape>
			<solid android:color="@color/color_orange" />
		    <corners android:radius="4dp" />
		    <padding android:left="8dp" android:right="8dp"
		        android:top="4dp" android:bottom="4dp" />
		</shape>
	</item>
	
	<item>
		<shape>
			<solid android:color="@color/default_badge_color" />
		    <corners android:radius="4dp" />
		    <padding android:left="8dp" android:right="8dp"
		        android:top="4dp" android:bottom="4dp" />
		</shape>
	</item>
</selector>